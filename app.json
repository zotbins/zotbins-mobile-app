{
  "expo": {
    "name": "ZotZero-Mobile",
    "slug": "zotzero-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-screen.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "imageResizeMode": "contain",
      "dark": {
        "image": "./assets/images/splash-screen.png",
        "backgroundColor": "#000000"
      }
    },
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.zotbins.zotzero",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "ZotBins requires camera access to scan and identify waste items.",
        "NSPhotoLibraryUsageDescription": "ZotBins requires access to your photo library to select images of waste for identification.",
        "NSLocationWhenInUseUsageDescription": "ZotBins requires your location to show nearby smart bins on the map."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.zotbins.zotzero",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "deploymentTarget": "16.0"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "ZotBins requires your location to show nearby smart bins on the map."
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionLabel": "ZotBins requires camera access to scan and identify waste items."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "ZotBins needs access to upload images from your library for waste identification."
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "expo-apple-authentication",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "77dff7b2-1586-49a4-a0c3-417627e692d7"
      },
      "router": {
        "origin": false
      }
    },
    "owner": "heatwave"
  }
}
