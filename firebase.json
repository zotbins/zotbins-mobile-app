{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5005
    },
    "firestore": {
      "port": 8089
    },
    "pubsub": {
      "port": 8090
    },
    "ui": {
      "enabled": true,
      "port": 4001
    }
  }
}
